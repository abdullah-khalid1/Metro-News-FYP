<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/Home">

    <fragment
        android:id="@+id/Video"
        android:name="com.mynews.metronews.ui.VideoFragment"
        android:label="Videos"
        tools:layout="@layout/fragment_video" />
    <fragment
        android:id="@+id/Home"
        android:name="com.mynews.metronews.ui.Home"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_Home_to_newsDetail"
            app:destination="@id/Detail" />
    </fragment>
    <fragment
        android:id="@+id/Category"
        android:name="com.mynews.metronews.ui.CategoryFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_category" />
    <fragment
        android:id="@+id/LiveTv"
        android:name="com.mynews.metronews.ui.LiveTvFragment"
        android:label="Live TV"
        tools:layout="@layout/fragment_live_tv" />
    <fragment
        android:id="@+id/Detail"
        android:name="com.mynews.metronews.ui.NewsDetail"
        android:label="Detail"
        tools:layout="@layout/fragment_news_detail">
        <argument
            android:name="news_title"
            android:defaultValue=" "
            app:argType="string" />
        <argument
            android:name="news_description"
            android:defaultValue=" "
            app:argType="string" />
        <argument
            android:name="news_image_url"
            android:defaultValue=" "
            app:argType="string" />
    </fragment>
</navigation>